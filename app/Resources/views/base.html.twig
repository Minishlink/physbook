<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Site privé pour les élèves d'Arts et Métiers ParisTech">
        <meta name="author" content="Louis Lagrange">
        <title>{% block title %}PJM{% endblock %}</title>
        {% block stylesheets %}
        {% stylesheets
            '%kernel.root_dir%/../app/Resources/public/less/general.less'
            filter='less,cssrewrite,?yui_css'
            output='css/design.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {% javascripts
                '%kernel.root_dir%/../app/Resources/public/js/ext/jquery.min.js'
                '%kernel.root_dir%/../app/Resources/public/js/ext/moment*.js'
                '%kernel.root_dir%/../app/Resources/public/js/ext/bootstrap.min.js'
                '%kernel.root_dir%/../app/Resources/public/js/ext/bootstrap-*.js'
                '%kernel.root_dir%/../app/Resources/public/js/ext/chosen.jquery.min.js'
                '%kernel.root_dir%/../app/Resources/public/js/nav.js'
                filter='?yui_js'
                output='js/extra.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
