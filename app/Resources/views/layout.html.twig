{% extends "::base.html.twig" %}

{% set error_page = false %}

{% block base_javascripts %}
{{ parent() }}
{% if offline is not defined %}<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>{% endif %}
{% javascripts
    '%kernel.root_dir%/../app/Resources/public/lib/jquery/dist/jquery.min.js'
    output='js/jquery.js'
%}
    <script>window.jQuery || document.write('<script src="{{ asset_url }}"><\/script>');</script>
{% endjavascripts %}

{% if offline is not defined %}<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>{% endif %}
{% javascripts
    '%kernel.root_dir%/../app/Resources/public/lib/bootstrap/dist/js/bootstrap.min.js'
    output='js/bootstrap.js'
%}
    <script>$.fn.modal || document.write('<script src="{{ asset_url }}"><\/script>');</script>
{% endjavascripts %}

{% if offline is not defined %}<script src="//cdn.datatables.net/1.10.5/js/jquery.dataTables.min.js"></script>{% endif %}
{% javascripts
    '%kernel.root_dir%/../app/Resources/public/lib/datatables/media/js/jquery.dataTables.min.js'
    output='js/dataTables.js'
%}
    <script>$.fn.dataTable || document.write('<script src="{{ asset_url }}"><\/script>');</script>
{% endjavascripts %}

{% if offline is not defined %}<script src="//cdn.jsdelivr.net/select2/4.0.0/js/select2.min.js"></script>{% endif %}
{% javascripts
    '%kernel.root_dir%/../app/Resources/public/lib/select2/dist/js/select2.min.js'
    output='js/select2.js'
%}
    <script>$.fn.select2 || document.write('<script src="{{ asset_url }}"><\/script>');</script>
{% endjavascripts %}

{% javascripts
    'bundles/fosjsrouting/js/router.js'
    'js/fos_js_routes.js'
    '%kernel.root_dir%/../app/Resources/public/js/app.js'
    '%kernel.root_dir%/../app/Resources/public/lib/moment/min/moment.min.js'
    '%kernel.root_dir%/../app/Resources/public/lib/moment/locale/fr.js'
    '%kernel.root_dir%/../app/Resources/public/lib/bootstrap-progressbar/bootstrap-progressbar.min.js'
    '%kernel.root_dir%/../app/Resources/public/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js'
    '%kernel.root_dir%/../app/Resources/public/js/ext/dataTables.bootstrap.min.js'
    '%kernel.root_dir%/../app/Resources/public/js/conf.js'
    '%kernel.root_dir%/../app/Resources/public/lib/webui-popover/dist/jquery.webui-popover.min.js'
    '%kernel.root_dir%/../app/Resources/public/lib/select2/dist/js/i18n/fr.js'
    '%kernel.root_dir%/../app/Resources/public/js/piwik.js'
    '%kernel.root_dir%/../app/Resources/public/js/nav.js'
    '%kernel.root_dir%/../app/Resources/public/js/chargement.js'
    '%kernel.root_dir%/../app/Resources/public/js/show_user.js'
    '%kernel.root_dir%/../app/Resources/public/js/physHM.js'
    '%kernel.root_dir%/../app/Resources/public/js/ajax-form.js'
    filter='?yui_js'
    output='js/site.js'
    package='js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% if app.environment == 'dev' %}
<script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endif %}
{% endblock %}

{% block body %}

{# modals #}
<div id="modals">
{% block modals %}{% endblock %}
</div>

{# menu #}
{% include("::nav.html.twig") %}

{# contenu #}
<div id="content">
    {% block content %}{% endblock %}
</div>

{# footer #}
{% include("::footer.html.twig") %}

{% endblock %}
