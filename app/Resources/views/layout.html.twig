<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

		<title>{% block title %}PJM{% endblock %}</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
		{% endblock %}
	</head>

	<body>
		<div class="container">
			<div id="header" class="jumbotron">
				<h1>PJM</h1>
				<p>de la mort qui tue</p>
			</div>

			<div class="row">
				<div id="menu" class="col-md-3">
                    <h3>Ton compte</h3>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        Connecté en tant que {{ app.user.username }}.<br>
                        <a class="btn btn-default" href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                    {% else %}
                        <a class="btn btn-default" href="{{ path('fos_user_security_login') }}">Connexion</a>
                    {% endif %}
					<h3>Les news</h3>
					<ul class="nav nav-pills nav-stacked">
                        <li><a href="{{ path('pjm_news_accueil') }}">Accueil des news</a></li>
                        {% if is_granted('ROLE_AUTEUR') %}
                            <li><a href="{{ path('pjm_news_ajouter') }}">Ajouter un article</a></li>
                        {% endif %}
					</ul>
                    {% if is_granted('ROLE_USER') %}
					   {{ render(controller("PJMNewsBundle:News:menu", {'nombre': 3})) }}
                    {% endif %}
				</div>
				<div id="content" class="col-md-9">
					{% block body %}
					{% endblock %}
				</div>
			</div>

			<hr>

			<footer>
				<p>Louis Lagrange</p>
			</footer>
		</div>

		{% block javascripts %}
			<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
			<script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
		{% endblock %}

	</body>
</html>
