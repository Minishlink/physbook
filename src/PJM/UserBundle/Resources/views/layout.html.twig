{% extends "::base.html.twig" %}

{% block stylesheets %}
{% stylesheets
    '%kernel.root_dir%/../app/Resources/public/less/UserBundle.less'
    filter='less,cssrewrite,?yui_css'
    output='css/design-connexion.css'
%}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div id="penguin">
                <img src="{{ asset('images/login/penguin_yeux_ouverts.png') }}" />
            </div>

            <div id="logo">
                <img src="{{ asset('images/general/logo_bg-blanc.png') }}" alt="Phy'sbook" />
            </div>

            <div id="connexion_wrapper">
                {% block fos_user_content %}
                {% endblock fos_user_content %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
