{% block pjm_userPicker_javascript %}
{% spaceless %}
    <script type="text/javascript">
        jQuery(document).ready(function($) {
            $('#{{ id }}_users').select2({
                placeholder: 'Invite d\'autres PGs'
            });

            $('form[name="{{ id }}"] .select2-container').append('<span style="position: absolute; right: 0.5em; top: 0.5em; cursor: pointer; color: #333;" class="glyphicon glyphicon-search"></span>');

            $('form[name="{{ id }}"] .select2-container .glyphicon-search').click(function() {
                $('#userFilterModal').modal('show');
            });

            $('#userFilterModal').on('shown.bs.modal', function (e) {
                $('#pjm_userPicker_responsables_0_responsabilite').select2();
            });
        });
    </script>
{% endspaceless %}
{% endblock %}
