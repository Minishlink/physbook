{% if accordion is not defined %}{% set accordion = "#accordion" %}{% endif %}
{% if expanded is not defined %}{% set expanded = false %}{% endif %}

<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="heading{{ name }}" data-toggle="collapse" data-parent="{{ accordion }}" data-target="#collapse{{ name }}" aria-expanded="{{ expanded ? 'true' : 'false' }}" aria-controls="collapse{{ name }}">
        <h2 class="panel-title">
            {{ panel_title }}
        </h2>
    </div>
    <div id="collapse{{ name }}" class="panel-collapse collapse{% if expanded %} in{% endif %}" role="tabpanel" aria-labelledby="heading{{ name }}">
        <div class="panel-body">
            {% block panel_body %}
                {% block description %}{% endblock %}

                {% if form is defined %}
                    <h3>{% block form_title %}Ajout{% endblock %}</h3>
                    {{ form_stylesheet(form) }}
                    {{ form_javascript(form) }}
                    {{ form(form) }}
                {% endif %}

                {% if datatable is defined %}
                    <h3>{% block datatable_title %}Liste{% endblock %}</h3>
                    {{ datatable_render(datatable) }}
                {% endif %}
            {% endblock %}
        </div>
    </div>
</div>
