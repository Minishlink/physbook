{% extends "PJMAppBundle::layout.html.twig" %}

{% block pageName %}contact{% endblock %}
{% block categorieName %}Contact{% endblock %}
{% block pjm_app_body_title %}{% endblock %}

{% block pjm_app_body %}
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1 class="font-blackout_sunrise text-rouge">Nous contacter</h1>

            <form method="post" role="form">
                <div class="form-group">
                    {{ form_widget(form.sujet, {'attr': {'class': 'form-control', 'placeholder': 'Sujet'}}) }}
                    {{ form_errors(form.sujet) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'placeholder': 'Contenu'}}) }}
                    {{ form_errors(form.contenu) }}
                </div>

                {{ form_rest(form) }}
                <button onclick="return confirm('Es-tu sûr de vouloir effacer ce que tu as marqué ?');" type="reset" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Effacer</button>
                <button type="submit" class="btn btn-primary pull-right"><span class="font-blackout_sunrise text-large">Envoyer <span class="glyphicon glyphicon-chevron-right"></span></span></button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
