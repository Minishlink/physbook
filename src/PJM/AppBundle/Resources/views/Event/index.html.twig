{% extends "PJMAppBundle:Event:layout.html.twig" %}

{% block title %}{% if event is not null %}{{ event.nom }} - {% endif %}{{ parent() }}{% endblock %}

{% block pjm_app_body_content %}

<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#creation" aria-expanded="false" aria-controls="creation">
    <span class="glyphicon glyphicon-plus"></span> Cr√©er
</button>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        {{ render(controller('PJMAppBundle:Event:nouveau')) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-push-6">
        {% include "PJMAppBundle:Event:event.html.twig" %}
    </div>
    <div class="col-md-6 col-md-pull-6">
        {% include "PJMAppBundle:Event:timeline.html.twig" %}
    </div>
</div>

{% endblock %}


{% block javascripts %}
{{ parent() }}
{% javascripts
    '%kernel.root_dir%/../app/Resources/public/js/event.js'
    filter='?yui_js'
    output='js/event.js'
    package='js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}
