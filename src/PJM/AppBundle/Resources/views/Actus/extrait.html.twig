{% if liste_articles|length != 0 %}
<ul class="list-unstyled">
{% for article in liste_articles %}
    <li>
        <span class="text-larger"><a href="{{ path('pjm_app_actus_voir', {'slug': article.slug}) }}">{{ article.titre }}</a></span><br>
        {{ article.contenu|truncate(100,true) }}
    </li>
{% endfor %}
</ul>
{% endif %}
