<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingPrix" data-toggle="collapse" data-parent="#accordion" data-target="#collapsePrix" aria-expanded="true" aria-controls="collapsePrix">
        <h2 class="panel-title">
                Prix de la baguette
        </h2>
    </div>
    <div id="collapsePrix" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingPrix">
        <div class="panel-body">
            <p>
                {% if prixActuel is not null %}
                Le prix actuel est de {{ prixActuel|prix }}.
                {% else %}
                Afin d'utiliser ce module, il te faut indiquer le prix d'une la baguette de pain.
                {% endif %}
            </p>
            <h3>Modification</h3>
            {{ form(form) }}

            <h3>Historique</h3>

            {% if listePrix != null %}
            <div class="table-responsive">
                <table id="tabGestionPrixBaguette" class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Prix</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for prix in listePrix %}
                        <tr>
                            <td>{{ prix.date|date('d/m/y') }}</td>
                            <td>{{ prix.prix|prix }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            Pas d'historiques de prix.
            {% endif %}
        </div>
    </div>
</div>
