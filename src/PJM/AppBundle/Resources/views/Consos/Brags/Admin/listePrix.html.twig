<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingParametres" data-toggle="collapse" data-parent="#accordion" data-target="#collapseParametres" aria-expanded="true" aria-controls="collapseParametres">
        <h2 class="panel-title">
                Param√®tres
        </h2>
    </div>
    <div id="collapseParametres" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingParametres">
        <div class="panel-body">
            <h3>Prix de la baguette</h3>

            <h4>Modification</h4>
            {% include "PJMAppBundle:Consos:Form/prix.html.twig" with {'form': form } %}

            <h4>Historique</h4>

            {% if listePrix != null %}
            <div class="table-responsive">
                <table id="tabGestionPrixBaguette" class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Prix</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for prix in listePrix %}
                        <tr>
                            <td>{{ prix.date|date('d/m/y') }}</td>
                            <td>{{ prix.prix }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            Pas d'historiques de prix.
            {% endif %}
        </div>
    </div>
</div>
