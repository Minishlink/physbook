<h2>Liste des bucquages</h2>

{% if bucquages != null %}
<div class="table-responsive">
    <table id="tabGestionBucquages" class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>PG</th>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
            {% for bucquage in bucquages %}
            <tr>
                <td>{{ bucquage.id }}</td>
                <td>{{ bucquage.date|date('d/m/y') }}</td>
                <td>{{ bucquage.user.username }}</td>
                <td>{{ bucquage.prix/10 }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% else %}
Il n'y a pas de bucquages.
{% endif %}
