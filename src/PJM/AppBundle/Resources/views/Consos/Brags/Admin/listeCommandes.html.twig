<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingCommandes" data-toggle="collapse" data-parent="#accordion" data-target="#collapseCommandes" aria-expanded="true" aria-controls="collapseParametres">
        <h2 class="panel-title" >
                Liste des commandes
        </h2>
    </div>
    <div id="collapseCommandes" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingCommandes">
        <div class="panel-body">
            {% if commandes != null %}
            <div class="table-responsive">
                <table id="tabGestionCommandes" class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Création</th>
                            <th>Début</th>
                            <th>Fin</th>
                            <th>PG</th>
                            <th>Nombre</th>
                            <th>P.U.</th>
                            <th>&Eacute;tat</th>
                            <th>Valider</th>
                            <th>Résilier</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for commande in commandes %}
                        <tr>
                            <td>{{ commande.date|date('d/m/y') }}</td>
                            <td>{% if commande.dateDebut is not null %}{{ commande.dateDebut|date('d/m/y') }}{% endif %}</td>
                            <td>{% if commande.dateFin is not null %}{{ commande.dateFin|date('d/m/y') }}{% endif %}</td>
                            <td>{{ commande.user.username }}</td>
                            <td>{{ commande.nombre/10 }}</td>
                            <td>{{ commande.item.prix|prix }}</td>
                            <td>{% if commande.valid is null %}En attente{% elseif commande.valid == false %}Résiliée{% else %}En cours{% endif %}</td>
                            <td>
                                {% if commande.valid is null %}
                                <a href="{{ path('pjm_app_consos_brags_admin_validerCommande', {'commande': commande.id}) }}">Valider</a>
                                {% endif %}
                            </td>
                            <td>
                                {% if commande.valid == true %}
                                <a href="{{ path('pjm_app_consos_brags_admin_resilierCommande', {'commande': commande.id}) }}">Résilier</a>
                                {% elseif commande.valid is null %}
                                <a href="{{ path('pjm_app_consos_brags_admin_resilierCommande', {'commande': commande.id}) }}">Annuler</a>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            Il n'y a pas de commandes.
            {% endif %}
        </div>
    </div>
</div>
