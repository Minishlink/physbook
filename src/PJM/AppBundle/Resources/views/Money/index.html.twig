{% extends "PJMAppBundle::layout.html.twig" %}

{% block title %}
	Paiement | {{ parent() }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% javascripts
    '@PJMAppBundle/Resources/public/js/paiement.js'
    filter='?yui_js'
    output='js/paiement.js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{% block pjm_app_body %}

<div class="well">

    {% if erreur is not null %}
    <div class="alert alert-{{ erreur.niveau }}">Erreur {{ erreur.code }} : {{ erreur.contenu }}</div>
    {% endif %}

    <button id="init_paiement">Initialiser la demande de paiement</button>
    <div id="return_paiement"></div>
    <div id="infos_paiement">{{ dump(response) }}</div>

</div>

{% endblock %}
